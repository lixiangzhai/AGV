<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common_button_gradient"
        android:gravity="center"
        android:layout_margin="@dimen/dp15"
        android:paddingStart="@dimen/dp20"
        android:paddingTop="@dimen/dp10"
        android:paddingEnd="@dimen/dp30"
        android:paddingBottom="@dimen/dp10"
        android:text="@string/text_calling_points"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp24" />

    <TextView
        android:id="@+id/tv_calling_queue_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:gravity="center"
        android:text="5"
        android:background="@drawable/bg_round_button_red"
        android:textStyle="bold"
        android:textSize="@dimen/sp20"
        android:textColor="@color/red"
        android:visibility="visible" />
</FrameLayout>


