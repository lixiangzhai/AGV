<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dp30"
    android:layout_marginEnd="@dimen/dp30"
    android:background="@drawable/bg_task_pause"
    android:gravity="center"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_weight="1"
        app:cardBackgroundColor="#2C3F76"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/dp10"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_task_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp30" />

            <TextView
                android:id="@+id/tv_route_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/text_route_name"
                android:textColor="@color/white"
                android:textSize="@dimen/sp22" />


            <TextView
                android:id="@+id/tv_now_floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/text_now_floor"
                android:textColor="@color/white"
                android:textSize="@dimen/sp22" />

            <TextView
                android:id="@+id/tv_task_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/text_task_start_time"
                android:textColor="@color/white"
                android:textSize="@dimen/sp22" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="5"
            android:background="@drawable/bg_task_pause_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_arrived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp30"
                android:background="@drawable/bg_task_arrived"
                android:ellipsize="end"
                android:gravity="center"
                android:lineSpacingMultiplier="0.8"
                android:maxWidth="480dp"
                android:maxLines="2"
                android:padding="@dimen/dp15"
                android:paddingStart="@dimen/dp30"
                android:paddingTop="@dimen/dp15"
                android:paddingEnd="@dimen/dp30"
                android:text="@string/text_arrived"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_next_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp20"
                android:lineSpacingMultiplier="0.8"
                android:maxWidth="500dp"
                android:text="@string/text_wait_for_go_to_next_point"
                android:textAlignment="center"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_next_point_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp20"
                android:textSize="@dimen/sp30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10">

            <TextView
                android:id="@+id/tv_return_to_product_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_return_green"
                android:drawablePadding="@dimen/dp15"
                android:gravity="center"
                android:text="@string/text_return_product_point"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18" />


            <TextView
                android:id="@+id/tv_lift_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_lift_up"
                android:drawablePadding="@dimen/dp15"
                android:gravity="center"
                android:text="@string/text_lift_up"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18"
                 />

            <TextView
                android:id="@+id/tv_lift_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_lift_down"
                android:drawablePadding="@dimen/dp15"
                android:gravity="center"
                android:text="@string/text_lift_down"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18"
                 />

            <TextView
                android:id="@+id/tv_go_to_next_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_go_to_next_table"
                android:drawablePadding="@dimen/dp15"
                android:gravity="center"
                android:text="@string/text_go_to_next"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_cancel_task"
                android:drawablePadding="@dimen/dp15"
                android:gravity="center"
                android:text="@string/text_cancel_recycle"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>