<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp15">

    <TextView
        android:id="@+id/tv_start_calling_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:layout_weight="2"
        android:background="@drawable/bg_common_button_active"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp26" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_qrcode_point_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:src="@drawable/ic_direction_arrow" />

    <TextView
        android:id="@+id/tv_target_calling_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:layout_weight="2"
        android:background="@drawable/bg_common_button_active"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp26" />

</LinearLayout>