<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp20"
        android:paddingTop="@dimen/dp15"
        android:paddingEnd="@dimen/dp20">

        <com.reeman.agv.widgets.ExpandableLayout
            android:id="@+id/el_normal_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            expandable:el_contentLayout="@layout/layout_normal_mode_setting_content"
            expandable:el_headerLayout="@layout/layout_normal_mode_setting_header" />

        <com.reeman.agv.widgets.ExpandableLayout
            android:id="@+id/el_route_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            expandable:el_contentLayout="@layout/layout_route_mode_setting_content"
            expandable:el_headerLayout="@layout/layout_route_mode_setting_header" />

        <com.reeman.agv.widgets.ExpandableLayout
            android:id="@+id/el_qrcode_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            expandable:el_contentLayout="@layout/layout_qrcode_mode_setting_content"
            expandable:el_headerLayout="@layout/layout_qrcode_mode_setting_header" />

        <com.reeman.agv.widgets.ExpandableLayout
            android:id="@+id/el_calling_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            expandable:el_contentLayout="@layout/layout_calling_mode_setting_content"
            expandable:el_headerLayout="@layout/layout_calling_mode_setting_header" />

    </LinearLayout>

</ScrollView>